{
  "name": "dynamodb-toolbox",
  "description": "Lightweight and type-safe query builder for DynamoDB and TypeScript.",
  "author": "Jeremy Daly <jeremy@jeremydaly.com>",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test-v1": "vitest run v1",
    "check-types": "tsc --noEmit",
    "check-types-v1": "tsc --noEmit -p tsconfig.v1.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:cjs-v1": "tsc -p tsconfig.cjs.v1.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:esm-v1": "tsc -p tsconfig.esm.v1.json",
    "build:types": "tsc -p tsconfig.types.json",
    "build:types-v1": "tsc -p tsconfig.types.v1.json",
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "prebuild": "rm -rf dist",
    "build-v1": "npm run build:cjs-v1 && npm run build:esm-v1 && npm run build:types-v1",
    "lint-v1": "eslint src/v1",
    "prettier-v1": "prettier --check 'src/v1/**/*.(js|ts)'",
    "prepare": "npm run build",
    "prepare-v1": "npm run build-v1",
    "prepublishOnly": "npm run test && npm run check-types",
    "prepublishOnly-v1": "npm run test-v1 && npm run lint-v1 && npm run check-types-v1"
  },
  "lint-staged": {
    "*.(ts|js)": [
      "prettier --write"
    ]
  },
  "license": "MIT",
  "contributors": [
    "ThomasAribart <thomasa@theodo.fr>",
    "Naor Peled <me@naor.dev>"
  ],
  "dependencies": {
    "deep-copy": "^1.4.2",
    "lodash": "^4.17.21",
    "ts-toolbelt": "^9.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeremydaly/dynamodb-toolbox.git"
  },
  "keywords": [
    "serverless",
    "aws",
    "dynamodb",
    "nosql"
  ],
  "bugs": {
    "url": "https://github.com/jeremydaly/dynamodb-toolbox/issues"
  },
  "homepage": "https://github.com/jeremydaly/dynamodb-toolbox#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.145.0",
    "@aws-sdk/lib-dynamodb": "^3.245.0",
    "@types/lodash": "^4.17.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "aws-sdk-client-mock": "^4.0.1",
    "coveralls": "^3.1.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "prettier": "^2.2.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.2",
    "tsconfig-paths": "^4.1.1",
    "tsd": "^0.23.0",
    "typescript": "^4.7.4",
    "vite": "^5.3.1",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/lib-dynamodb": "^3.0.0"
  },
  "files": [
    "dist/cjs/index.*",
    "dist/cjs/package.json",
    "dist/cjs/constants.*",
    "dist/cjs/classes/",
    "dist/cjs/lib/",
    "dist/esm/index.*",
    "dist/esm/package.json",
    "dist/esm/constants.*",
    "dist/esm/classes/",
    "dist/esm/lib/"
  ]
}
